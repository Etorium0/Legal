{
  "name": "legal-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@google/generative-ai": "^0.21.0",
    "@types/markdown-it": "^14.1.2",
    "antd": "^6.1.2",
    "axios": "^1.4.0",
    "d3": "^7.9.0",
    "framer-motion": "^9.0.0",
    "lucide-react": "^0.469.0",
    "markdown-it": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.10.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/d3": "^7.4.3",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^9.12.0",
    "eslint-plugin-react": "^7.37.1",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.2.2",
    "vite": "^5.1.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "browser": true,
      "es2021": true
    },
    "rules": {
      "brace-style": [
        "error",
        "allman",
        {
          "allowSingleLine": true
        }
      ],
      "curly": [
        "error",
        "all"
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  }
}
